<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Speech-to-Text Demo</title>
</head>

<body>
    <h1>Live Speech-to-Text Demo</h1>
    <button onclick="startRecording()">Start Recording</button>
    <button onclick="stopRecording()">Stop Recording</button>
    <div id="transcription"></div>

    <!-- Include the Web Speech API script -->
    <script>
        if ('SpeechRecognition' in window || 'webkitSpeechRecognition' in window) {
            // Web Speech API is supported
            const recognition = new (window.SpeechRecognition || window.webkitSpeechRecognition)();

            recognition.continuous = true;
            recognition.interimResults = true;

            recognition.onresult = function (event) {
                console.log(result);
                const result = event.results[event.results.length - 1];
                const transcript = result[0].transcript;

                // Update the UI with live transcription
                document.getElementById('transcription').innerText = transcript;
            };

            recognition.onend = function () {
                // Handle end of speech recognition, if needed
            };

            function startRecording() {
                recognition.start();
            }

            function stopRecording() {
                recognition.stop();
            }
        } else {
            // Web Speech API not supported
            alert('Web Speech API is not supported in this browser.');
        }
    </script>

    <!-- Include the Socket.IO script -->
    <script src="/socket.io/socket.io.js"></script>

    <!-- Include your main.js script -->
    <script src="public/js/speechTranslation.js"></script>
</body>

</html>